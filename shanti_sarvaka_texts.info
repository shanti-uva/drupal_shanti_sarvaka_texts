name = SHANTI Savarka for Texts
description = A subtheme of SHANTI's Savarka theme customized for Texts.
core = 7.x
base theme = shanti_sarvaka
version = 7.x-1.x

dependencies[] = jquery_update ; requires jquery v 1.10+
dependencies[] = shanti_essays

;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[header]         = Top Bar Header
regions[banner]         = Color Strip Banner
regions[content]        = Content
regions[search_flyout]  = Search Fly Out
regions[sidebar_first]  = Primary Sidebar
regions[sidebar_second] = Secondary Sidebar
regions[highlighted]    = Highlighted
regions[help]           = Help
regions[page_top]       = Page top
regions[page_bottom]    = Page bottom
regions[footer]         = Footer
regions[admin_footer]   = Admin Footer


;;;;;;;;;;;;;;;;;;;;;
;; Theme Settings
;;;;;;;;;;;;;;;;;;;;;

settings[shanti_sarvaka_base_color] = '#764B8D'
settings[shanti_sarvaka_icon_class] = 'texts'
settings[shanti_sarvaka_shanti_site] = 1

;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;

stylesheets[all][] =  css/shanti-main-shanti_sarvaka_texts.css
stylesheets[all][] =  css/shanti-search-shanti_sarvaka_texts.css
stylesheets[all][] =  css/shanti-texts.css
stylesheets[all][] =  css/jquery.bxslider.css
                          
;; FOAD
stylesheets[all][] =  css/jquery.ui.tabs.min.css


;;;;;;;;;;;;;;;;;;;;;;
;;; Scripts
;;;;;;;;;;;;;;;;;;;;;;

scripts[] = js/shanti-main-shanti_sarvaka_texts.js
scripts[] = js/shanti-search-shanti_sarvaka_texts.js
scripts[] = js/jquery.bxslider.js
